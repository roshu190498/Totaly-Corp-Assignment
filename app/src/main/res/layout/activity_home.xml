<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.HomeActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gdSep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivPreview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_15sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/gdSep"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTakeSelfie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtTakeSelfie"
            android:gravity="center_vertical|center"
            android:layout_margin="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/gdSep"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPickImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtPickImage"
            android:gravity="center_vertical|center"
            android:layout_margin="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/btnTakeSelfie"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>